layout: null
permalink: "/sitemap.xml"
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% set siteBase = "https://memoc.pages.dev" %}
{% for page in collections.all %}
  {% if page.url and not page.data.draft and (page.data.sitemap is not sameas(false)) and page.url != "/404/" and (page.data.robots is not defined or page.data.robots != "noindex") %}
    {% set loc = page.data.canonical or (siteBase + page.url) %}
  <url>
    <loc>{{ loc | replace('&', '&amp;') | replace('<', '&lt;') | replace('>', '&gt;') }}</loc>
    {% if page.date %}
    <lastmod>{{ page.date.toISOString().slice(0,10) }}</lastmod>
    {% else %}
    <lastmod>{{ (page.data.date or site.time).toISOString().slice(0,10) }}</lastmod>
    {% endif %}
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endif %}
{% endfor %}
</urlset>